extends layout

block content
  h1 What's Hot?
    div.row
        each sub in subs
          div.col-sm-6
            .panel.panel-info
                .panel-heading 
                    h2 r/#{sub.title}
                .panel-body 
                  each post in sub.posts
                    div.row
                      div.col-sm-6
                        h4 
                          a(href=post.url) #{post.title}
                      div.col-sm-6
                        a(href=post.url) 
                          img.image(src=post.thumbnail width='60' height='60')
                      
                
